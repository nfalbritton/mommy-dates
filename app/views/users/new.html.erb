
  <div class="sign-background">
    <h1> Sign Up  </h1>
        <form action="users.php" method="post" accept-charset="">
          <div class="initial-signup-form columns large-4 small-10">
            <br>
            Username:
            <input type="text" name="username">
            <br>
            First Name:
            <input type="text" name="first-name">
            <br>
            Last Name:
            <input type="text" name="last-name">
            <br>
            Email:
            <input type="email" name="email">
            Password:
            <input type="password" name="psw">
            <br>
            Zip Code:
            <input type="numbers" name="zipcode">
            <br>
            Phone:
            <input type="tel" name="usrtel">
            <br>
            About Me:
            <textarea name="about-me" rows="10" cols="30">
          </textarea>
            <br>
          <ul> class="checkbox-list"
            <label for="events">Looking For:</label>
            <% ['Night Out', 'Outdoor Activity', 'Workout Buddy', 'Play Date'].each do |event| %>
              <li><%= check_box_tag 'user[event_id][]', event.id, user_interest?(event) %></li>
            <% end %>
          </ul>
          <input type="submit" value="GET STARTED!">
            <br>
          </div>
        </form>
    </div>
  </body>
</html>
