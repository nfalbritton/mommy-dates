<%= form_for(@event) do |f| %>
  <div class="field">
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :location %><br/>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :zipcode %><br/>
    <%= f.text_field :zipcode %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.collection_radio_buttons : %>

  <div class="actions">
    <%= f.submit(value="Submit") %>
  </div>

<% end %>
